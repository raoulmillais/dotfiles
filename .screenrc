caption always "%{= kw}%?%-Lw%?%{+b kw}%n*%t%f %?(%u)%?%{= kw}%?%+Lw%?"
hardstatus alwayslastline "%{= bd}%{4}(%H) %{+b y}%t %{g} %l %=%{-bc}%D, %d %M %Y  %c"
windowlist title "Num Name%=Location Flags"
windowlist string "%03n %t%=%h %f"
shell -/bin/bash
defscrollback 10240
startup_message off
defhstatus "screen ^E (^Et) | $USER@^EH"
hardstatus off
# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I" 

term screen-256color
bell_msg '^Gbell in window %n...'

# erase background with current bg color 
defbce "on"

# Make colours work
termcapinfo xterm 'hs:ts=\E]0;:fs=\007:Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' 

# Fix Shift Page up / down in xterms
termcapinfo xterm ti@:te@

# Set the title according to the bash title
shelltitle '|bash'

# Load the screen profile
screen -t ROOT su -
screen -t NODE node
screen -t bash bash
source "$SCREEN_CONF_DIR/$SCREEN_CONF"
